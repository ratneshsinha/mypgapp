<div class="container">
  <h1>Edit an ICD Record</h1>

  <%= render 'shared/errors' %>

  <%= form_with(model: @icd, local: true)  do |f| %>
    <p>
      <%= f.label :code %> <br>
      <%= f.text_field :code %>
    </p>

    <p>
      <%= f.label :description %> <br>
      <%= f.text_field :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>

  <%= link_to 'Cancel Edit & Return to ICD Listing', icds_path %>
</div>